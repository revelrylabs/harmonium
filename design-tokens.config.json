{
  "source": ["./design-tokens/**/*.json"],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "buildPath": "./scss/vars/",
      "files": [
        {
          "destination": "_design-tokens.scss",
          "format": "scss/variables/default"
        }
      ]
    },
    "docs": {
      "transformGroup": "docs",
      "buildPath": "./docs-src/",
      "files": [
        {
          "destination": "designTokens.js",
          "format": "javascript/module"
        }
      ]
    }
  }
}
