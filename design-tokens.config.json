{
  "source": ["./design-tokens/**/*.json"],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "buildPath": "./settings-templates/",
      "files": [
        {
          "destination": "_harmonium-settings.scss",
          "format": "scss/variables",
          "filter": "isNotColor"
        },
        {
          "destination": "_color-palette.scss",
          "format": "scss/variables",
          "filter": "isColor"
        }
      ]
    },
    "docs": {
      "transformGroup": "docs",
      "buildPath": "./docs-src/",
      "files": [
        {
          "destination": "designTokens.js",
          "format": "javascript/module"
        }
      ]
    }
  }
}
