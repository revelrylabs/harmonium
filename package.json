{
  "name": "harmonium",
  "version": "4.3.2",
  "description": "An opinionated React component framework for teams that move fast.",
  "repository": {
    "type": "git",
    "url": "https://github.com/revelrylabs/harmonium.git"
  },
  "dependencies": {
    "bowser": "^1.9.3",
    "breakpoint-sass": "^2.7.1",
    "chart.js": "^2.7.2",
    "classnames": "^2.2.5",
    "foundation-sites": "^6.3.1",
    "jquery": "^3.2.1",
    "lodash": "^4.17.5",
    "luxon": "^1.8.2",
    "prop-types": "^15.5.7",
    "react": ">=15.3.0",
    "react-dom": ">=15.3.0",
    "sassy-npm-importer": "^2.1.0"
  },
  "scripts": {
    "clean": "rm -rf lib/",
    "babel": "node_modules/.bin/babel --source-maps -d lib/ src/",
    "build": "npm run clean && npm run babel",
    "prepare": "npm run clean && npm run babel",
    "test": "bin/test",
    "fix": "./node_modules/.bin/eslint --fix src/** docs-src/src/**",
    "sass-test": "cat ./sass-test/input.scss | node-sass > ./sass-test/output.css"
  },
  "keywords": [],
  "author": {
    "name": "Revelry Labs",
    "email": "support@revelry.co",
    "url": "https://revelry.co"
  },
  "contributors": [
    {
      "name": "Joel Wietelmann",
      "email": "joel@revelry.co"
    },
    {
      "name": "Robert Prehn",
      "email": "robert@revelry.co"
    },
    {
      "name": "Laura Hill",
      "email": "laura@revelry.co"
    }
  ],
  "license": "MIT",
  "devDependencies": {
    "@semantic-release/changelog": "^2.0.1",
    "@semantic-release/git": "^4.0.1",
    "@semantic-release/npm": "^3.2.4",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^8.2.2",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-plugin-transform-decorators": "^6.24.1",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "babelify": "^7.3.0",
    "chai": "^3.5.0",
    "coveralls": "^3.0.2",
    "enzyme": ">=2.8.2",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.5.0",
    "eslint-plugin-react": "^7.7.0",
    "graceful-readlink": "^1.0.1",
    "gulp": "^4.0.0",
    "jsdom": "^11.0.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^5.2.0",
    "node-sass": "^4.9.2",
    "nyc": "^13.0.0",
    "prettier": "^1.11.1",
    "prettier-eslint": "^8.8.1",
    "react-test-renderer": ">=15.0.0",
    "semantic-release": "^15.1.7",
    "sinon": "^2.3.8",
    "timekeeper": "^2.0.0"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "html",
      "text"
    ],
    "sourceMap": false,
    "instrument": true
  },
  "babel": {
    "presets": [
      "react",
      "es2015",
      "stage-0"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json"
        ],
        "message": "chore(release): Bump version to ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  }
}
