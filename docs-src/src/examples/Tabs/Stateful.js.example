<div>
  <h3>Stateful Tabs</h3>
  <h4>Default to first tab</h4>
  <Tabs.Stateful>
    <Tabs.Item contentKey={1} title="One">
      <Row>
        <Col>
          <Lipsum p={1} />
        </Col>
      </Row>
    </Tabs.Item>
    <Tabs.Item contentKey={2} title="Two">
      <Row>
        <Col>
          <Lipsum p={2} />
        </Col>
      </Row>
    </Tabs.Item>
  </Tabs.Stateful>
  <h4>Explicitly set defaultActive to 2</h4>
  <Tabs.Stateful defaultActive={2}>
    <Tabs.Item contentKey={1} title="One">
      <Row>
        <Col>
          <Lipsum p={1} />
        </Col>
      </Row>
    </Tabs.Item>
    <Tabs.Item contentKey={2} title="Two">
      <Row>
        <Col>
          <Lipsum p={2} />
        </Col>
      </Row>
    </Tabs.Item>
  </Tabs.Stateful>
</div>
